{% extends 'base.html.twig' %}

{% block title %}{{ recette.titre }}{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-8">
            <h1>{{ recette.titre }}</h1>
            <p>{{ recette.etapes }}</p>
            <p><strong>Tags:</strong> {{ recette.tags }}</p>
        </div>
        <div class="col-md-4">
            <img src="{{ recette.image }}" alt="{{ recette.titre }}" class="img-fluid">
        </div>
    </div>
    <a href="{{ path('recette_edit', {'id': recette.id}) }}" class="btn btn-primary mt-3">Modifier</a>
    <form method="post" action="{{ path('recette_delete', {'id': recette.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette recette ?');" class="mt-3">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ recette.id) }}">
        <button type="submit" class="btn btn-danger">Supprimer</button>
    </form>
    <a href="{{ path('recette_index') }}" class="btn btn-secondary mt-3">Retour à la liste</a>
{% endblock %}
